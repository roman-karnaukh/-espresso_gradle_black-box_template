<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editLastName"
                style="?attr/style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name_latinitsa"
                android:inputType="textFilter|textNoSuggestions"
                android:singleLine="true"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editFirstname"
                style="?attr/style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/first_name_latinitsa"
                android:imeOptions="actionDone"
                android:inputType="textFilter|textNoSuggestions"
                android:singleLine="true"
                android:textColor="?attr/common_text"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <ua.privatbank.ap24.beta.views.RobotoMediumButton
                android:id="@+id/buttonBirthDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="?attr/color5"
                android:text="@string/date_of_birth_"
                android:textColor="?attr/color7"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editNumbDoc"
                style="?attr/style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/series_num_document"
                android:inputType="textFilter|textNoSuggestions"
                android:singleLine="true"
                android:textColor="?attr/common_text"
                android:textSize="15sp" />

            <ua.privatbank.ap24.beta.views.RobotoMediumButton
                android:id="@+id/buttonExptDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:text="@string/expd"
                android:textColor="?attr/color7"
                android:textSize="15sp" />

            <AutoCompleteTextView
                android:id="@+id/editNationality"
                style="?attr/style_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:completionThreshold="1"
                android:hint="@string/country_of_citizenship_latinitsa"
                android:imeOptions="actionDone"
                android:inputType="textFilter|textNoSuggestions"
                android:singleLine="true"
                android:textSize="15sp" />


            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="60dp"
                p24:text="@string/button_save"
                p24:textSize="@dimen/text_size_button_next" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>