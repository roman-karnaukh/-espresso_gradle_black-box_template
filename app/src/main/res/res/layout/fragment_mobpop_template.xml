<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/color2"
                            android:textSize="15sp"
                            android:id="@+id/tvNamePhone"
                            android:text="@string/phone_number_with_colon"/>
                    <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="4149437415172350"
                            android:singleLine="true"
                            android:textColor="?attr/common_text"
                            android:gravity="bottom"
                            android:textSize="22dp"
                            />


                </LinearLayout>
                <ImageView
                        android:id="@+id/image"
                        android:layout_weight="0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                <EditText
                        android:id="@+id/etAmt"
                        android:layout_width="wrap_content"
                        android:minWidth="70dp"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="?attr/color7"
                        style="?attr/style_edittext"
                        android:layout_weight="1"
                        android:paddingBottom="0dp"
                        android:textSize="@dimen/text_size_amt"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/tvCcy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:gravity="bottom"
                        android:textColor="?attr/common_text"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/color2"
                        android:textSize="15sp"
                        android:id="@+id/tvNameCard"
                        android:text="@string/from_card_with_colon"/>

                <TextView
                        android:id="@+id/tvCardNumber"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="?attr/common_text"
                        android:textSize="16dp"/>
            </LinearLayout>

            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                    android:id="@+id/buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="right"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>