<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llTrainTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTrainTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_orif">
            </ImageView>

            <TextView
                android:id="@+id/tvTrainTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="Google чеки"
                android:textSize="16sp"
                android:textColor="?attr/listOper"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBusTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBusTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_avon">
            </ImageView>

            <TextView
                android:id="@+id/tvBusTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/cash_withdraw"
                android:textSize="16sp"
                android:textColor="?attr/listOper"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:id="@+id/llOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_eye">
            </ImageView>

            <TextView
                android:id="@+id/tvOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/restore_password"
                android:textSize="16sp"
                android:textColor="?attr/listOper"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llImageDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>