<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <RadioGroup
                android:id="@+id/rgRound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbrbRound10_Round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/common_text"
                    android:textSize="15sp"
                    android:paddingLeft="28dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/rounding_up_to_10"/>

                <RadioButton
                    android:id="@+id/rbrbRound10O_Round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/common_text"
                    android:textSize="15sp"
                    android:paddingLeft="28dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/rounding_up_to_100"/>

                <RadioButton
                    android:id="@+id/rbNotReplenish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/common_text"
                    android:textSize="15sp"
                    android:paddingLeft="28dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/rb_not_replenish"/>
            </RadioGroup>

            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="35dp"
                p24:textSize="@dimen/text_size_button_next"
                p24:text="@string/button_install"
                android:layout_gravity="right"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="?attr/color2"
            android:text="@string/kopilka_info_round"/>

    </LinearLayout>
</LinearLayout>