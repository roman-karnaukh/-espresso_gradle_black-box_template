<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/ivGiftBas"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:src="@drawable/_cancel"
                />
        </LinearLayout>

        <ua.privatbank.ap24.beta.views.RobotoCondensedLightTextView
            android:id="@+id/tvGiftTitle"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="?attr/bar_header_text_color"
            android:gravity="center"
            style="@style/singleLine"
            android:textSize="@dimen/text_size_title"

            android:text="@string/gift_cards_shop" />

    </FrameLayout>
</RelativeLayout>