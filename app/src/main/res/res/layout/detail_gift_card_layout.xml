<?xml version="1.0" encoding="utf-8"?>

<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ua.privatbank.ap24.beta.components.DynamicImageView
            android:id="@+id/ivImageLogoGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/summVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textColor="?attr/color3"
                    android:textSize="44dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGiftCcy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:text="@string/biplan_ccy"
                    android:textSize="20dp"
                    android:textColor="?attr/color3" />
            </LinearLayout>

            <ua.privatbank.ap24.beta.apcore.components.CounterView
                android:id="@+id/counterViewGift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/tvNameGiftCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="32"
            android:textColor="?attr/color6"
            android:textSize="18sp" />

        <ua.privatbank.ap24.beta.views.RobotoItalicTextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="32"
            android:textColor="?attr/color5"
            android:textSize="14sp"
            android:visibility="visible" />

        <ua.privatbank.ap24.beta.views.RobotoItalicTextView
            android:id="@+id/tvDopInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="32"
            android:textColor="?attr/color5"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7">
    <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
        android:id="@+id/buttonAddGiftCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        p24:text="@string/in_basket"
        p24:textSize="@dimen/text_size_button_next"
        android:layout_marginLeft="20dp" />

    <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        p24:text="@string/button_back"
        p24:textSize="@dimen/text_size_button_next"
        android:layout_marginLeft="20dp" />
</LinearLayout>
    </LinearLayout>