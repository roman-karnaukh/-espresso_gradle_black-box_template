<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/llChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="?attr/chat" />

                <TextView
                    android:id="@+id/tvUnreadMsg"
                    style="@style/text_white_size_small_bg_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:minHeight="22dp"
                    android:minWidth="22dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvChat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/chat"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_to_bank_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/call_to_bank_operator" />

            <TextView
                android:id="@+id/tvRestorePass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/call_with_bank"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_info" />

            <TextView
                android:id="@+id/tvMap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/map_"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/smsBanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/smsBankingIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_sms_contact" />

            <TextView
                android:id="@+id/smsBankingTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/commands"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFirefighters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/_101" />

            <TextView
                android:id="@+id/tvFirefighters"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/firefighters"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPolice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/_102" />

            <TextView
                android:id="@+id/tvPolice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/police"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llAmbulance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/_103" />

            <TextView
                android:id="@+id/tvAmbulance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/ambulance"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSalvation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lines="2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/_112" />

            <TextView
                android:id="@+id/tvSalvation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/salvation"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llGasService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/_104" />

            <TextView
                android:id="@+id/tvGasService"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/gas_service"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>