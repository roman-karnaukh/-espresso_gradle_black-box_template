<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="?attr/common_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/ll_icons"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="3dp"
                  android:orientation="horizontal"
                  android:visibility="gone">

        <ImageView
                android:id="@+id/image_p_24"
                android:layout_width="0dp"
                android:layout_height="@dimen/ava_size"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="?attr/p24_ic_header"/>

        <ImageView
                android:id="@+id/image_discounts"
                android:layout_width="0dp"
                android:layout_height="@dimen/ava_size"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="?attr/barcode_circle"/>

        <ImageView
                android:id="@+id/image_map"
                android:layout_width="0dp"
                android:layout_height="@dimen/ava_size"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="?attr/map_ic_auth"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="?attr/splash"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:visibility="visible">

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                p24:iv_background="?attr/refresh_image"
                p24:text="@string/repeat"
                p24:textSize="@dimen/text_size_button_next"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:orientation="vertical"
            android:paddingTop="100dp"
            android:visibility="visible">

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/sendCommandsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:visibility="gone"
                p24:iv_background="?attr/selector_button_next_small"
                p24:text="@string/sms_commands"
                p24:textSize="@dimen/text_size_more_transfers"/>

    </LinearLayout>
</FrameLayout>