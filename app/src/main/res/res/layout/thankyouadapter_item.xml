<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:baselineAligned="false"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/llBg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="100dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivLogoDetailsList"
                android:layout_height="match_parent"
                android:src="@drawable/default_gift_icon"
                android:layout_width="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ua.privatbank.ap24.beta.views.RobotoLightTextView
                    android:id="@+id/tvNameDetailsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/common_text"
                    android:layout_marginBottom="10dp"
                    />

                <ua.privatbank.ap24.beta.apcore.components.TextSumView
                    android:id="@+id/tvNominal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <ua.privatbank.ap24.beta.views.RobotoLightTextView
                android:id="@+id/tvBlok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/pay_block"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="?attr/common_text"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />

            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                p24:text="@string/common_send"
                p24:iv_background="?attr/selector_button_next_small"
                p24:textSize="@dimen/text_size_button_next"
                android:layout_marginLeft="10dp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>