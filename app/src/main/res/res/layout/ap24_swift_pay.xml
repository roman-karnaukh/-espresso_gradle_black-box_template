<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/cardFromSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editAmt"
                style="?attr/style_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="70dp"
                android:paddingBottom="0dp"
                android:text="100"
                android:textColor="?attr/color7"
                android:textSize="@dimen/text_size_amt" />


            <Spinner
                android:id="@+id/ccySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvTitleFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="@string/swift_commission"
            android:textColor="?attr/master_common_text"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tvCommission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/about_the_commission"
            android:textColor="?attr/common_text"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/editPass"
            style="?attr/style_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/pass"
            android:inputType="textPassword"/>

        <CheckBox
            android:id="@+id/checkPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:button="?attr/check_style"
            android:paddingLeft="@dimen/padding_checkbox"
            android:text="@string/show_password"
            android:textColor="?attr/common_text" />

        <CheckBox
            android:id="@+id/checkAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:button="?attr/check_style"
            android:paddingLeft="@dimen/padding_checkbox"
            android:text="@string/swift_agreement"
            android:textColor="?attr/common_text"
            android:textSize="15sp" />


        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="60dp"
            p24:textSize="@dimen/text_size_button_next" />


    </LinearLayout>

</ScrollView>