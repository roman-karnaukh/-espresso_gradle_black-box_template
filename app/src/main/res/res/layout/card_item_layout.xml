<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_same_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:listSelector="@android:color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="?attr/color_background_card_item"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_card_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/ivLogoCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/textNumCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/gray_99"
                android:textSize="13dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="*1111"
                    android:textColor="@color/gray_99"
                    android:textSize="13dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvLastTransAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0"
                    android:textColor="@color/orange_wot"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textNameCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/card_for_payment"
                    android:textColor="?attr/color6"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sumCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:text="2000"
                    android:textColor="?attr/color3"
                    android:textSize="26sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_Ccy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:text="грн"
                    android:textColor="?attr/color3"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <ua.privatbank.ap24.beta.apcore.components.TextSumView
                    android:id="@+id/tvSumCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>