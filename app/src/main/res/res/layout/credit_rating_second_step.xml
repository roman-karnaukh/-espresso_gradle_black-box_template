<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:text="@string/text_givc_select_window_util_type"
                android:textSize="20sp"
                android:textColor="?attr/common_text" />

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="20dp"
                android:paddingTop="50dp"
                android:text="Кредитная история"
                android:textSize="22sp"
                android:textColor="?attr/common_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMinMaxValueRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAmtCreditRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="46"
                android:textColor="?attr/color7"
                android:textSize="@dimen/text_size_amt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCcyMinMaxValueRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="bottom"
                android:text="@string/ccy_ua"
                android:paddingLeft="5dp"
                android:textColor="?attr/color7"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/cardFromSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>


        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="60dp"
            p24:textSize="@dimen/text_size_button_next" />


    </LinearLayout>
</ScrollView>