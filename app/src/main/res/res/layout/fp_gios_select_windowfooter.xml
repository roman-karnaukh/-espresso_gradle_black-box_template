<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textsumtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:textColor="?attr/common_text"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="@string/text_givc_select_window_sum"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/givc_select_window_text_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="44sp"
            android:textStyle="bold"
            android:textColor="?attr/color7"/>

        <TextView
            android:id="@+id/tvCcy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"
            android:textColor="?attr/color7"
            android:paddingBottom="7dp"
            android:text="@string/biplan_ccy"/>
    </LinearLayout>

    <TextView
        android:id="@+id/givc_select_window_text_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="?attr/common_text"
        android:paddingLeft="5dp"
        android:text="@string/text_givc_select_window_card"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/givc_select_window_spinner_cards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
        android:id="@+id/givc_select_window_button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:paddingTop="50dp"
        android:text="@string/common_continue" />
</LinearLayout>