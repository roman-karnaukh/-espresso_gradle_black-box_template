<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="vertical">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:shrinkColumns="1"
            android:stretchColumns="1">
        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/numOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?attr/color4"
                    android:text="@string/number_order"/>

            <TextView
                    android:id="@+id/textNumOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="?attr/color4"
                    android:text=""
                    android:textStyle="bold"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/dateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:textColor="?attr/color4"
                    android:gravity="right"
                    android:text="@string/common_date"/>

            <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"/>

        </TableRow>

        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/stateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/common_state"/>

            <TextView
                    android:id="@+id/textState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

        </TableRow>
        <TableRow
                android:id="@+id/tableRowCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/ccyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/common_currency"/>

            <TextView
                    android:id="@+id/textCcy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"/>
        </TableRow>

        <TableRow
                android:id="@+id/tableRowCcy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/dateCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/period_of_validity"/>

            <TextView
                    android:id="@+id/textDateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"/>

        </TableRow>

        <TableRow
                android:id="@+id/tableRowCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/common_card"/>

            <TextView
                    android:id="@+id/textCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="?attr/color4"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"/>

        </TableRow>
    </TableLayout>

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/cvv2Cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                p24:textSize="@dimen/text_size_button_next"
            p24:text="@string/cvv2_cod"
                android:layout_gravity="right"/>
    </LinearLayout>

</ScrollView>