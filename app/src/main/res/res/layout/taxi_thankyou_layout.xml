<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tvThanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thanks"
            android:textColor="?attr/color6"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageThankyou"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fun_smile" />

    </LinearLayout>
    <ua.privatbank.ap24.beta.views.RobotoRegularTextView
        android:id="@+id/tvDiscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wait_auto"
        android:textColor="?attr/color6"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:gravity="center" />

    <ua.privatbank.ap24.beta.views.RobotoRegularTextView
        android:id="@+id/tvArchiveTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_in_archive"
        android:textColor="?attr/color6"
        android:autoLink="map"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:gravity="center" />

</LinearLayout>
    </LinearLayout>