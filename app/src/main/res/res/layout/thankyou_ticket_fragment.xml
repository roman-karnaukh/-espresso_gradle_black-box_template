<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <ua.privatbank.ap24.beta.components.ImageSquareView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/fun_smile" />
        <TextView
            android:id="@+id/tvThanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thanks"
            android:textColor="?attr/color6"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvDiscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticket_success_submit"
            android:textColor="?attr/color6"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp" />

        <ua.privatbank.ap24.beta.views.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticket_happynes"
            android:textColor="?attr/color6"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:layout_marginTop="40dp" />


    </LinearLayout>
    <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        p24:text="@string/button_to_menu"
        p24:textSize="@dimen/text_size_button_next"
        android:layout_marginTop="60dp" />
</LinearLayout>