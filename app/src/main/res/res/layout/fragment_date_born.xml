<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:measureWithLargestChild="false">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="?attr/color6"
                    android:text="@string/select_your_dates_of_birth"
                    android:id="@+id/tvTitle"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>

            <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datePicker"
                    android:layout_marginTop="30dp"
                    android:calendarViewShown="false"
                    android:clickable="false"
                    android:layout_gravity="center_horizontal"/>
            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                    xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                    android:id="@+id/buttonNext"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    p24:textSize="@dimen/text_size_button_next"
                    p24:text="@string/button_next"
                    android:layout_gravity="right"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>