<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true">

    <ua.privatbank.ap24.beta.views.RobotoMediumTextView
        android:id="@+id/textDescrip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/summLay"
        android:text="@string/defhard" />

    <ua.privatbank.ap24.beta.views.RobotoMediumTextView
        android:id="@+id/codeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textDescrip"
        android:layout_below="@+id/textDescrip"
        android:layout_marginLeft="10dp"
        android:textColor="@color/archive_color_green"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/summLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/textSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:gravity="right"
            android:textStyle="bold" />

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/textCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:gravity="right"
            android:textStyle="bold" />

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:gravity="right" />

        <ImageView
            android:id="@+id/barcode_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"
            android:contentDescription="@null"
            android:src="@drawable/qr_code" />
    </LinearLayout>
</RelativeLayout>
