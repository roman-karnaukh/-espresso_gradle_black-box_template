<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/llPointA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pointA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/a_"
                    android:gravity="center"
                    android:textColor="?attr/master_common_text"
                    android:background="@drawable/bg_ab_archive"
                    android:layout_marginLeft="7dp" >
                </TextView>

                <TextView
                    android:id="@+id/tvDescriptionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="пр.Героев 18 под 2"
                    android:textColor="?attr/master_common_text"
                     />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPointB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pointB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/b_"
                    android:gravity="center"
                    android:textColor="?attr/master_common_text"
                    android:background="@drawable/bg_ab_archive"
                    android:layout_marginLeft="7dp" >
                </TextView>

                <TextView
                    android:id="@+id/tvDescriptionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="ул.Артема 56 под 5"
                    android:textColor="?attr/master_common_text" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPointC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pointC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/c_"
                    android:gravity="center"
                    android:textColor="?attr/master_common_text"
                    android:background="@drawable/bg_ab_archive"
                    android:layout_marginLeft="7dp" >
                </TextView>

                <TextView
                    android:id="@+id/tvDescriptionC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="пр.Героев 18 под 2"
                    android:textColor="?attr/master_common_text" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPointD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pointD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/d_"
                    android:gravity="center"
                    android:textColor="?attr/master_common_text"
                    android:background="@drawable/bg_ab_archive"
                    android:layout_marginLeft="7dp" >
                </TextView>

                <TextView
                    android:id="@+id/tvDescriptionD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="ул.Артема 56 под 5"
                    android:textColor="?attr/master_common_text"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_marginLeft="42dp">

                <TextView
                    android:id="@+id/tvInProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="?attr/color3"
                    android:text="@string/in_progress" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/arrow_p_activ_dark"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>