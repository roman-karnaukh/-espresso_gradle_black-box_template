<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="?attr/master_common_text"
            android:text="@string/description"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="?attr/common_text"
            android:textSize="22dp"/>


        <TextView
            android:id="@+id/textAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="?attr/master_common_text"
            android:text="@string/sum"
            android:textSize="14dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32"
            android:textColor="?attr/color7"
            android:textSize="44dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvCcy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="?attr/master_common_text"
            android:gravity="bottom"
            android:text="@string/biplan_ccy"/>

    </LinearLayout>

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
            xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            p24:iv_background="?attr/selector_button_next_small"
            p24:textSize="20dp"
            p24:text="@string/button_details"/>


        <LinearLayout
            android:id="@+id/llMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/master_common_text"
                android:text="@string/commission"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/Free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="?attr/master_common_text"
                android:textSize="22dp"/>
                <TextView
                    android:id="@+id/tvCcy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:text="@string/biplan_ccy"/>

                </LinearLayout>
            <TextView
                android:id="@+id/textCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/master_common_text"
                android:text="@string/from_card"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/CardNum"
                android:layout_width="450dip"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:textColor="?attr/master_common_text"
                android:textSize="22dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/textPassword"
            android:text="@string/pass_privat24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="?attr/master_common_text"
            />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:visibility="gone"
            />
        <CheckBox
            android:id="@+id/checkPass"
            android:button="?attr/check_style"
            android:paddingLeft="@dimen/padding_checkbox"
            android:layout_marginTop="10dp"
            android:textColor="?attr/common_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_password"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editCvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/cvv"
            android:visibility="gone"
            android:inputType="number|textPassword"
            android:password="true">
        </EditText>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right">

            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>