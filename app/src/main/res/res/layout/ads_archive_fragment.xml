<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/llMy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/tvMy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="Мои обьявления"
                    android:textColor="?attr/color3"
            />
            <View
                    android:id="@+id/viewBottomMy"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?attr/color3"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/llPurchased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/tvPurchased"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="Купленные"
                    android:textColor="?attr/common_text"
            />
            <View
                    android:id="@+id/viewBottomPurchased"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?attr/color3"
                    android:visibility="invisible"
            />

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>