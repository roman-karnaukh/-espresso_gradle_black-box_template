<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:paddingBottom="16dp"
                  android:paddingTop="7dp"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <ua.privatbank.ap24.beta.views.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/orders_services_m"
                    android:textColor="?attr/bar_header_text_color"
                    android:textSize="16sp"/>

            <ImageView
                    android:id="@+id/kabArchive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selector_text_background"
                    android:src="@drawable/ic_archive_taxi"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/imLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="?attr/boar"/>

        <ua.privatbank.ap24.beta.views.RobotoLightTextView
                android:id="@+id/tvOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/online_service"
                android:textColor="?attr/master_common_text"
                android:textSize="16sp"/>

        <ua.privatbank.ap24.beta.views.RobotoLightTextView
                android:id="@+id/tvSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/more_spec"
                android:textColor="?attr/master_common_text"
                android:textSize="16sp"/>

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/pop_serv"
                android:textColor="?attr/color7"
                android:textSize="18dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnClean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="?attr/bg_time"
                    android:text="@string/clean_apart"
                    android:textColor="?attr/master_common_text"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btnPlumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="?attr/bg_time"
                    android:text="@string/plumber"
                    android:textColor="?attr/master_common_text"
                    android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnElectr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="?attr/bg_time"
                    android:text="@string/electrician"
                    android:textColor="?attr/master_common_text"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btnWantWork"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="?attr/bg_time"
                    android:text="@string/want_work"
                    android:textColor="?attr/master_common_text"
                    android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/llOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                <ImageView
                        android:id="@+id/imOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="?attr/kaban1"/>

                <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                        android:id="@+id/tvOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/other_serv"
                        android:lines="2"
                        android:textColor="?attr/listOper"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llWorkIt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                <ImageView
                        android:id="@+id/ivWorkIt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="?attr/kaban2" />

                <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                        android:id="@+id/tvWorkIt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/how_work_m"
                        android:lines="2"
                        android:textColor="?attr/listOper"
                        android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                <ImageView
                        android:id="@+id/ivSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="?attr/kaban3"/>

                <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                        android:id="@+id/tvSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/support"
                        android:lines="2"
                        android:textColor="?attr/listOper"
                        android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">
            <CheckBox
                    android:id="@+id/cbOffer"
                    android:button="?attr/check_style"
                    android:paddingLeft="@dimen/padding_checkbox"
                    android:textColor="?attr/common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:id="@+id/tvOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/i_accept"
                    android:textColor="?attr/color7"
                    android:textSize="12sp"
                    android:layout_gravity="top"
                    android:gravity="top"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>