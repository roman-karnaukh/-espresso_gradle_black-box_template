<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal|bottom"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_result"
            android:textColor="?attr/common_text"
            android:textSize="44sp"/>

        <ImageView

            android:id="@+id/imageViewSmile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:src="?attr/smile"/>

      </LinearLayout>

      <TextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/deposit_open_success"
                android:textColor="?attr/common_text"
                android:textSize="20sp"/>

      <LinearLayout
          android:id="@+id/llDescr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:textColor="?attr/common_text"
            android:textSize="@dimen/text_size_description"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/tvTerm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/deposit_term_"
              android:textColor="?attr/common_text"
              android:textSize="@dimen/text_size_description"/>

          <TextView
              android:id="@+id/textTerm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textColor="?attr/common_text"
              android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/tvRate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/deposit_rate_"
              android:textColor="?attr/common_text"
              android:textSize="@dimen/text_size_description"/>

          <TextView
              android:id="@+id/textRate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textColor="?attr/common_text"
              android:textSize="22sp"/>

          <ImageView
              android:id="@+id/imageBonus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="-2dp"
              android:layout_marginLeft="10dp"
              android:background="@drawable/ic_strawberries"
              android:visibility="gone"/>

          <TextView
              android:id="@+id/tvBonus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="?attr/common_text"
              android:textSize="18sp"
              android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/type_of_deposit"
              android:textColor="?attr/common_text"
              android:textSize="@dimen/text_size_description"/>

          <TextView
              android:id="@+id/tvNameDepositType"
              android:layout_width="wrap_content"
              android:paddingLeft="10dp"
              android:paddingBottom="5dp"
              android:textColor="?attr/common_text"
              android:layout_height="wrap_content"/>
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?attr/color7"
            android:textSize="@dimen/text_size_amt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvCcy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="bottom"
            android:textColor="?attr/color7"
            android:textSize="@dimen/text_size_description"/>
      </LinearLayout>

      <TextView
          xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
          android:id="@+id/tvInfoFirst"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_weight="1"
          android:gravity="center"
          android:visibility="gone"
          android:text="@string/deposit_created"
          android:textColor="?attr/common_text"
          android:textSize="20sp"/>

      <TextView
          android:id="@+id/tvDepositControl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="15dp"
          android:visibility="gone"
          android:textSize="18sp"
          android:gravity="center_horizontal"
          android:text="@string/control_deposit"/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginBottom="34dp"
          android:layout_marginTop="@dimen/marginTop_payStatus"
          android:orientation="horizontal">

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
            xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            p24:text="@string/button_to_menu"
            p24:textSize="@dimen/text_size_button_next"/>

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
            xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            p24:text="@string/button_back"
            p24:textSize="@dimen/text_size_button_next"/>
      </LinearLayout>

    </LinearLayout>
  </ScrollView>

</LinearLayout>