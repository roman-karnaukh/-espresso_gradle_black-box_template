<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ua.privatbank.ap24.beta.views.RobotoItalicTextView
            android:id="@+id/tvGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/game" />

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/tvGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Название" />

        <ua.privatbank.ap24.beta.views.RobotoItalicTextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/game_login" />

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/tvLoginName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Ваш логин" />

        <LinearLayout
            android:id="@+id/llValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="?attr/color7"
                android:textSize="@dimen/text_size_amt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0"
                android:gravity="bottom"
                android:text="@string/ccy_ua"
                android:textColor="?attr/color7" />
        </LinearLayout>

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            p24:iv_background="?attr/selector_button_next_gray"
            p24:text="@string/button_details"
            p24:textSize="@dimen/text_size_more_transfers" />

        <LinearLayout
            android:id="@+id/llMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ua.privatbank.ap24.beta.views.RobotoItalicTextView
                    android:id="@+id/tvCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game_amt" />

                <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                    android:id="@+id/tvCreditCcy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0"
                    android:gravity="bottom"
                    android:text="@string/ccy_ua" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <ua.privatbank.ap24.beta.views.RobotoItalicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount" />

                <TextView
                    android:id="@+id/tvCreditAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="@string/description_info"
                    android:textColor="?attr/color7"
                    android:textSize="@dimen/text_size_amt"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <ua.privatbank.ap24.beta.views.RobotoMediumEditText
            android:id="@+id/edit_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:enabled="true"
            android:hint="@string/common_pay_pass"
            android:inputType="textPassword"
            android:paddingTop="20dp" />

        <CheckBox
            android:id="@+id/checkPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="?attr/check_style"
            android:paddingLeft="@dimen/padding_checkbox"
            android:text="@string/show_password"
            android:textColor="?attr/common_text" />

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/btnGamesConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="60dp"
            p24:text="@string/common_commit"
            p24:textSize="@dimen/text_size_button_next" />

    </LinearLayout>
</ScrollView>