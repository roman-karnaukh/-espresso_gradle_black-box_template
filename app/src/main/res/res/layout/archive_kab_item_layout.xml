<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvCategoryName"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="?attr/master_common_text"
            android:text="Вызов строительного мусора"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvDate"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="21.02.2016"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/tvSumm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="?attr/color7"
            android:text="400 грн"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="@string/common_status"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/color6"
            android:text="Закрыто"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingLeft="10dp" />
    </LinearLayout>
</LinearLayout>