<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ua.privatbank.ap24.beta.fragments.tickets.train.FragmentTrainTickets2AStep"
        tools:ignore="Merge RootFrame">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ua.privatbank.ap24.beta.utils.HorizontalPicker
            android:id="@+id/picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/selector_horizontal_picker"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:dividerSize="10dp"
            app:sideItems="@integer/numSideItems"/>

    <WebView
        android:id="@+id/webView"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">
    </WebView>

    <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
        xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
        android:id="@+id/tickets_step3_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        p24:textSize="@dimen/text_size_button_next"
        style="@style/TicketsListElementsPaddings"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>
</merge>