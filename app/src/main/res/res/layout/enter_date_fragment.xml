<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/llCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="@string/city_m"
                android:textColor="?attr/master_common_text"
                android:textSize="16dp"
                android:visibility="visible" />

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:text="Киев"
                android:textColor="?attr/color6"
                android:textSize="16dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:text="@string/category_work_m"
                android:textColor="?attr/master_common_text"
                android:textSize="16dp"
                android:visibility="visible" />

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvCategoryJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:text="Уборка квартир"
                android:textColor="?attr/color6"
                android:textSize="16dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:text="@string/what_should_done_m"
                android:textColor="?attr/master_common_text"
                android:textSize="16dp"
                android:visibility="visible" />

            <ua.privatbank.ap24.beta.views.RobotoRegularTextView
                android:id="@+id/tvWhatDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:text="Убрать 2х комнатную квартиру на левом берегу"
                android:textColor="?attr/color6"
                android:textSize="16dp"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_time"
            android:text="@string/enter_date_ord"
            android:textColor="?attr/common_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/adress_m"
            android:singleLine="true"
            android:textColor="?attr/common_text"
            android:textSize="@dimen/text_size_more_transfers"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etAdressTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/adress_to"
            android:singleLine="true"
            android:textColor="?attr/common_text"
            android:textSize="@dimen/text_size_more_transfers"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/eMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/email"
            android:singleLine="true"
            android:textColor="?attr/common_text"
            android:textSize="@dimen/text_size_more_transfers" />

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            p24:text="@string/further"
            p24:textSize="@dimen/text_size_button_next" />
    </LinearLayout>
</ScrollView>