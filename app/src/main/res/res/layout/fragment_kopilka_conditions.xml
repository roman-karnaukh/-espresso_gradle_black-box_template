<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--от постулпений-->
            <TableLayout
                android:id="@+id/tlInflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/textInflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_inflow"
                        android:layout_marginLeft="2dp"

                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/color6"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowEmptyInflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textEmptyInflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_empty"
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color5"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowAccumulationInflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textAccumulationInflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color3"
                        android:textSize="16dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tlExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--от расходов-->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/textExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_expense"
                        android:layout_marginLeft="2dp"

                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/color6"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowEmptyExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textEmptyExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_empty"
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color5"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowAccumulationExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textAccumulationExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dfsdf"
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color3"
                        android:textSize="16dp"/>
                </TableRow>
            </TableLayout>
            <!--округление-->
            <TableLayout
                android:id="@+id/tlRounding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/textRounding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_rounding"
                        android:layout_marginLeft="2dp"

                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/color6"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowEmptyRounding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textEmptyRounding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_empty"
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color5"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowAccumulationRounding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textAccumulationRounding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color3"
                        android:textSize="16dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tlMonthlyPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--ежемесячный платеж-->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/textMonthlyPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_monthly_payment"
                        android:layout_marginLeft="2dp"

                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/color6"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowEmptyMonthlyPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textEmptyMonthlyPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_empty"
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color5"
                        android:textSize="16dp"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowAccumulationMonthlyPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/selector_button_next_small"/>

                    <TextView
                        android:id="@+id/textAccumulationMonthlyPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dfsdf"
                        android:layout_marginLeft="2dp"
                        android:textColor="?attr/color3"
                        android:textSize="16dp"/>
                </TableRow>
            </TableLayout>
        </TableLayout>

        <LinearLayout
            android:id="@+id/llSaveConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/editPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pass"
                style="?attr/style_edittext"
                android:inputType="textPassword">
            </EditText>


            <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                    xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:layout_gravity="right"
                p24:textSize="@dimen/text_size_button_next"
                p24:text="@string/change"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>