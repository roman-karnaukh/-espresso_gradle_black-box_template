<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textRates"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="?attr/bar_header_text_color"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:text=""
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharing_icon"
        android:src="@drawable/share_akciya"
        android:layout_weight=".2"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/master_operation_margin"
        android:layout_marginTop="@dimen/master_operation_margin" />

</FrameLayout>