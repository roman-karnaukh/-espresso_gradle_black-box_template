<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
			android:gravity="center_vertical"	
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="4"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameCard4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_4_numbers_your_card"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
            android:textColor="?attr/common_text"/>

                <ua.privatbank.ap24.beta.apcore.components.OtpView
                    android:id="@+id/viewCard4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="4"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_your_card"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                                android:textColor="?attr/common_text"/>

                <Spinner
                    android:id="@+id/spinnerCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:ems="10"
            android:hint="@string/edit_pass"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textSize="22dp"
            style="?attr/style_edittext"/>
            

        <EditText
            android:id="@+id/editPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:singleLine="true"
            android:hint="@string/edit_pass2"
            android:imeOptions="actionNext"
            android:textSize="22sp"
            style="?attr/style_edittext">


        </EditText>

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/style_edittext"
            android:layout_marginTop="15dp"
            android:hint="E-mail"
            android:singleLine="true"
            android:padding="10dp"
            android:imeOptions="actionNext"
            android:ems="10"
            android:textSize="22dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

        </LinearLayout>

        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>