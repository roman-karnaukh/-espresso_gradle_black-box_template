<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llTrainTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTrainTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_tickets_train_big"/>

            <TextView
                android:id="@+id/tvTrainTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/train_tickets_to"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBusTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivBusTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_tickets_bus_big"/>

            <TextView
                android:id="@+id/tvBusTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/bus_tickets_to"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAirTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAirTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/ic_tickets_plane_big"/>

            <TextView
                android:id="@+id/tvAirTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/airplane_tickets_to"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llCinemaTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCinemaTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/movie"/>

            <TextView
                android:id="@+id/tvCinemaTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/afisha_tickets_to"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFootballTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFootballTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/football_ticket"/>

            <TextView
                android:id="@+id/tvFootballTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal"
                android:text="@string/footbal_tickets_to"
                android:textColor="?attr/listOper"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llImageDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>