<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="20dp"
              android:paddingRight="20dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="?attr/soap"/>

        <TextView
            android:id="@+id/tvNew1"
            style="@style/text_white_size_small_bg_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ivHome"
            android:gravity="center"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:text="NEW"
            android:visibility="gone"/>

      </RelativeLayout>

      <ua.privatbank.ap24.beta.views.RobotoMediumTextView
          android:id="@+id/tvDiscounts"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="@string/products"
          android:textColor="?attr/listOper"
          android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBeerShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="?attr/beer_shop"/>

        <TextView
            android:id="@+id/tvNew"
            style="@style/text_white_size_small_bg_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ivBeerShop"
            android:gravity="center"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:text="NEW"
            android:visibility="gone"/>

      </RelativeLayout>

      <ua.privatbank.ap24.beta.views.RobotoMediumTextView
          android:id="@+id/tvBeerShop"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="Beer Shop"
          android:textColor="?attr/listOper"
          android:textSize="16sp"/>

    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llFlowers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFlowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="?attr/flowers"/>

      </RelativeLayout>

      <ua.privatbank.ap24.beta.views.RobotoMediumTextView
          android:id="@+id/tvFlowers"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="@string/flowers"
          android:textColor="?attr/listOper"
          android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llStocks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp">

      <ImageView
          android:id="@+id/stocks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:src="?attr/stock"/>

      <ua.privatbank.ap24.beta.views.RobotoMediumTextView
          android:id="@+id/tvStocks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="@string/stocks"
          android:textColor="?attr/listOper"
          android:textSize="16sp"/>

    </LinearLayout>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llDiscounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="?attr/barcode_more_wot"/>

      </RelativeLayout>

      <ua.privatbank.ap24.beta.views.RobotoMediumTextView
          android:id="@+id/tvDiscountCards"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="@string/discount_cards"
          android:textColor="?attr/listOper"
          android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBodo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible"
        android:paddingTop="30dp">

      <ImageView
          android:id="@+id/bodo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:src="?attr/stock"/>

      <ua.privatbank.ap24.beta.views.RobotoMediumTextView
          android:id="@+id/tvBodo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="BODO"
          android:textColor="?attr/listOper"
          android:textSize="16sp"/>

    </LinearLayout>

  </LinearLayout>
</LinearLayout>