<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/alll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <!--<LinearLayout

            android:id="@+id/colorRow"
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:background="#FF8800"
            android:visibility="gone">
    </LinearLayout>-->

    <RelativeLayout
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                android:id="@+id/textDescrip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/summLay"
                />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_below="@+id/textDescrip"
                android:layout_toLeftOf="@+id/summLay"
                >
            <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/common_state"

                    />

            <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                    android:id="@+id/textState"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/summLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

            <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                    android:id="@+id/textSum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:gravity="right|top"
                    android:textStyle="bold"/>
            <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                    android:id="@+id/textCard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:gravity="right|top"
                    android:textStyle="bold"/>
            <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                    android:id="@+id/textData"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:gravity="right|bottom"
                   />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>