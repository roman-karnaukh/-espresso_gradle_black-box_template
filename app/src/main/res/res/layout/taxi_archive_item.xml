<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="7dp"
              android:paddingBottom="7dp"
              android:paddingRight="10dp">


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/llPointA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/pointA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/bg_ab_archive"
                    android:gravity="center"
                    android:text="@string/a_"
                    android:textColor="?attr/master_common_text"/>

            <TextView
                    android:id="@+id/tvDescriptionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:text="пр.Героев 18 под 2"
                    android:textColor="?attr/master_common_text"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llPointB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/pointB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/bg_ab_archive"
                    android:gravity="center"
                    android:text="@string/b_"
                    android:textColor="?attr/master_common_text"/>

            <TextView
                    android:id="@+id/tvDescriptionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:text="ул.Артема 56 под 5"
                    android:textColor="?attr/master_common_text"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llPointC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

            <TextView
                    android:id="@+id/pointC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/bg_ab_archive"
                    android:gravity="center"
                    android:text="@string/c_"
                    android:textColor="?attr/master_common_text"/>

            <TextView
                    android:id="@+id/tvDescriptionC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:text="пр.Героев 18 под 2"
                    android:textColor="?attr/master_common_text"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llPointD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

            <TextView
                    android:id="@+id/pointD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/bg_ab_archive"
                    android:gravity="center"
                    android:text="@string/d_"
                    android:textColor="?attr/master_common_text"/>

            <TextView
                    android:id="@+id/tvDescriptionD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:text="ул.Артема 56 под 5"
                    android:textColor="?attr/master_common_text"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/llStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

            <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/clock"/>

            <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:text="@string/in_progress"
                    android:textColor="?attr/color3"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llPoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

            <ua.privatbank.ap24.beta.apcore.components.TextSumView
                    android:id="@+id/tvSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:paddingRight="5dp"
                    android:textColor="?attr/color7"
                    android:src="?attr/arrow_p_activ_dark"
                    android:text="50"
                    android:textSize="22sp"/>

        </LinearLayout>

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                android:id="@+id/taxiTypeOfPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:textColor="?attr/color7"
                android:src="?attr/arrow_p_activ_dark"
                android:text="@string/cash"/>

        <TextView
                android:id="@+id/taxiDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="?attr/color5"
                android:src="?attr/arrow_p_activ_dark"
                android:text="27.06.2066"/>

        <TextView
                android:id="@+id/taxiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="?attr/color5"
                android:src="?attr/arrow_p_activ_dark"
                android:text="08:47:99"/>
    </LinearLayout>
</LinearLayout>
