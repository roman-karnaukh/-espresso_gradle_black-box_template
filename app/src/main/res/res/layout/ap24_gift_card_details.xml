<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
                android:id="@+id/name"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

        <ua.privatbank.ap24.beta.components.DynamicImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <ua.privatbank.ap24.beta.views.RobotoLightTextView
                android:id="@+id/tvSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:textColor="?attr/master_common_text"
                android:text="@string/amount"
                android:textSize="14dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textColor="?attr/color7"
                    android:textSize="44dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tvCcy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:textColor="?attr/color7"
                    android:text="@string/ccy_ua"/>
        </LinearLayout>

        <ua.privatbank.ap24.beta.views.RobotoLightTextView
                android:id="@+id/tvCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:textColor="?attr/master_common_text"
                android:text="@string/cod_"
                android:textSize="14dp"/>

        <TextView
                android:id="@+id/textCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="?attr/color7"
                android:textSize="28dp"/>

        <CheckBox
                android:id="@+id/addMessage"
                android:button="?attr/check_style"
                android:paddingLeft="@dimen/padding_checkbox"
                android:textColor="?attr/common_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_message"
                android:layout_marginTop="10dp"/>

        <EditText
                android:id="@+id/editMesage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:maxLength="320"
                android:hint="@string/enter_your_message"
                style="?attr/style_edittext"
                android:visibility="gone">
        </EditText>

        <EditText
                android:id="@+id/editRecipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:inputType="textEmailAddress"
                android:maxLength="64"
                android:hint="@string/eo_receiver.firstName"
                style="?attr/style_edittext">
        </EditText>

        <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                style="?attr/style_edittext">
        </EditText>


        <ua.privatbank.ap24.beta.apcore.components.ButtonNextView
                xmlns:p24="http://schemas.android.com/apk/res/ua.privatbank.ap24"
                android:id="@+id/quittanceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                p24:textSize="@dimen/text_size_button_next"
                p24:text="@string/common_send"
                android:layout_gravity="left"/>

    </LinearLayout>

</ScrollView>

















