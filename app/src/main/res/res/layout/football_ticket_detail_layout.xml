<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

  <ua.privatbank.ap24.beta.views.RobotoBoldTextView
      android:id="@+id/tvNumberTickets"
      android:ellipsize="end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:textColor="?attr/master_common_text"
      android:text="Cектор"
      android:layout_gravity="left"
      android:layout_marginLeft="20dp"
      android:textIsSelectable="false"/>

  <Spinner
      android:id="@+id/spSectors"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dp"
      android:layout_margin="15dp"/>

  <LinearLayout
      android:id="@+id/llTickets"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

  </LinearLayout>

  <include layout="@layout/football_tickets_footer"/>


  <TextView
      android:id="@+id/emptyElement"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/no_data_to_display"
      android:textColor="?attr/color6"
      android:visibility="gone"/>

</LinearLayout>
</ScrollView>