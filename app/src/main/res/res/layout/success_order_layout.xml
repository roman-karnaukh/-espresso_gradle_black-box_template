<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <ua.privatbank.ap24.beta.views.RobotoMediumTextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_result"
            android:textColor="?attr/common_text"
            android:textSize="30sp"/>

        <ImageView

            android:id="@+id/imageViewSmile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/smile"/>

    </LinearLayout>
    <ua.privatbank.ap24.beta.views.RobotoRegularTextView
        android:id="@+id/tvOrderSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="@string/order_accepted"
        android:textColor="?attr/master_common_text"
        android:layout_marginTop="10dp" />

    <ua.privatbank.ap24.beta.views.RobotoRegularTextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="@string/searches_performer"
        android:textColor="?attr/master_common_text"/>

    <ua.privatbank.ap24.beta.views.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="@string/stat_serv"
        android:textColor="?attr/master_common_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center_horizontal"
        android:id="@+id/tvArchive" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvCity"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="@string/city_m"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvCityName"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/color6"
            android:text="Киев"
            android:visibility="visible"
            android:layout_margin="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvCategory"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="@string/category_work_m"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvCategoryJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/color6"
            android:text="Уборка квартир"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvDone"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="@string/what_should_done_m"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvWhatDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/color6"
            android:text="Убрать 2х комнатную квартиру на левом берегу"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvData"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="@string/data_execution"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvDateExecution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/color6"
            android:text="21.02.2016"
            android:visibility="visible"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/llAddress">

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvAdres"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/master_common_text"
            android:text="@string/adress"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_gravity="left" />

        <ua.privatbank.ap24.beta.views.RobotoRegularTextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?attr/color6"
            android:text="ул.Саксаганского, 16"
            android:visibility="visible"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingLeft="10dp" />

    </LinearLayout>
